<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CameraXExtreme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_blue</item>
        <item name="colorPrimaryVariant">@color/medium_light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_green</item>
        <item name="colorSecondaryVariant">@color/medium_light_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CameraXExtreme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CameraXExtreme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CameraXExtreme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>