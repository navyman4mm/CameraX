<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_common_margin"
    tools:context=".ui.SettingsFragment">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_label_settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingsSetCameraResolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_camera_resolution_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle" />

    <Button
        android:id="@+id/settingsRawSupportTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/raw_test_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsSetCameraResolutionButton" />

</androidx.constraintlayout.widget.ConstraintLayout>